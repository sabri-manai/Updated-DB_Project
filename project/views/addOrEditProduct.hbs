<h3>{{viewTi}}</h3>
<form action="/home/product" method="POST" autocomplete="off">
    <input type="hidden" name="id" value="{{product.id}}">
    <div class="form-group">
        <label>Product ID</label>
        <input type="text" class="form-control" name="productID" placeholder="Product ID" value="{{product.productID}}">
        <div class="text-danger">
            {{product.productIDError}}</div>
    </div> 
     <div class="form-row">
        <div class="form-group col-md-6">
            <label>Item</label>
            <input type="text" class="form-control" name="item" placeholder="Item" value="{{product.item}}">
        </div>
        <div class="form-group col-md-6">
            <label>Price</label>
            <input type="text" class="form-control" name="price" placeholder="Price" value="{{product.price}}">
        </div>
    </div>
      <div class="form-row">
        <div class="form-group col-md-6">
            <label>Quantity</label>
            <input type="text" class="form-control" name="quantity" placeholder="Quantity" value="{{product.quantity}}">
        </div>
        <div class="form-group col-md-6">
            <label>Size</label>
            <input type="text" class="form-control" name="size" placeholder="Size" value="{{product.size}}">
        </div>
    </div>
   
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/product/productList"><i class="fa fa-list-alt"></i> View All Products</a>
    </div>
</form>
