<h3><a class="btn btn-secondary" href="/product"><i class="fa fa-plus"></i> Create New</a> Product</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Item</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Size</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.productID}}</td>
            <td>{{this.item}}</td>
            <td>{{this.price}}</td>
            <td>{{this.quanity}}</td>
            <td>{{this.size}}</td>
            <td>
                <a href="/product/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/product/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>